generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assignor {
  id          String       @id @default(uuid())
  document    String       @db.VarChar(30)
  email       String       @unique @db.VarChar(140)
  phone       String       @db.VarChar(20)
  name        String       @db.VarChar(140)
  payables Payable[]

  @@map("assignors")
}

model Payable {
  id           String     @id @default(uuid())
  value        Float
  emissionDate DateTime   @map("emission_date")
  assignorId   String     @map("assignor_id")
  assignor     Assignor @relation(fields: [assignorId], references: [id])

  @@map("payables")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String

  @@map("users")
}
